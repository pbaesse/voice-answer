package com.example.calculadora;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class OperacoesActivity extends Activity{
	
	EditText tnum1;
    EditText tnum2;
    
    Button bsoma;
    Button bsubtracao;
    Button bmultiplicacao;
    Button bdivisao;
    
    TextView tresultado;
    
    double num1;
    double num2;
    double resultado;

	@Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_operacoes);
		
		tnum1 = (EditText) findViewById(R.Entrada.n1);
        tnum2 = (EditText) findViewById(R.Entrada.n2);
        
        bsoma = (Button) findViewById(R.Botao.Soma);
        bsubtracao = (Button) findViewById(R.Botao.Subtracao);
        bmultiplicacao = (Button) findViewById(R.Botao.Multiplicacao);
        bdivisao = (Button) findViewById(R.Botao.Divisao);
        
        tresultado = (TextView) findViewById(R.Texto.Resultado);
        
        bsoma.setOnClickListener(new View.OnClickListener() {
			public void onClick(View v) {
				num1 = (Double.parseDouble(tnum1.getText().toString()));
				num2 = (Double.parseDouble(tnum2.getText().toString()));
				
				resultado = num1 + num2;
				
				tresultado.setText(String.valueOf(resultado));
			}
		});
        
        bsubtracao.setOnClickListener(new View.OnClickListener() {
			public void onClick(View v) {
				num1 = (Double.parseDouble(tnum1.getText().toString()));
				num2 = (Double.parseDouble(tnum2.getText().toString()));
				
				resultado = num1 - num2;
				
				tresultado.setText(String.valueOf(resultado));
			}
		});
        
        bmultiplicacao.setOnClickListener(new View.OnClickListener() {
			public void onClick(View v) {
				num1 = (Double.parseDouble(tnum1.getText().toString()));
				num2 = (Double.parseDouble(tnum2.getText().toString()));
				
				resultado = num1 * num2;
				
				tresultado.setText(String.valueOf(resultado));
			}
		});
        
        bdivisao.setOnClickListener(new View.OnClickListener() {
			public void onClick(View v) {
				num1 = (Double.parseDouble(tnum1.getText().toString()));
				num2 = (Double.parseDouble(tnum2.getText().toString()));
				
				resultado = num1 / num2;
				
				tresultado.setText(String.valueOf(resultado));
			}
		});
    }
}