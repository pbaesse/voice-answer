<h1>Listing turmas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= turma.nome %></td>
        <td><%= turma.codigo %></td>
        <!--<td><%= link_to 'Show', turma %></td>-->
        <td><%= link_to 'Edit', edit_turma_path(turma) %></td>
        <td><%= link_to 'Excluir', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova turma', new_turma_path %>
<%= link_to 'Voltar', professors_path %>