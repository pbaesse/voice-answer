<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CadastroAluno" >

    <EditText
        android:id="@+id/et_datan_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_datan_ca"
        android:layout_alignBottom="@+id/tv_datan_ca"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/tv_datan_ca"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_instituicao_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_instituicao_ca"
        android:layout_alignBottom="@+id/tv_instituicao_ca"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/tv_instituicao_ca"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_estado_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_cidade_ca"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="21dp"
        android:text="Estado:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_nome_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_nome_ca"
        android:layout_alignBottom="@+id/tv_nome_ca"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tv_nome_ca"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_datan_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_cidade_ca"
        android:layout_below="@+id/et_nome_ca"
        android:layout_marginTop="21dp"
        android:text="D. de nascimento:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_instituicao_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_datan_ca"
        android:layout_below="@+id/et_datan_ca"
        android:layout_marginTop="21dp"
        android:text="Instituição:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_cidade_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_cidade_ca"
        android:layout_alignBottom="@+id/tv_cidade_ca"
        android:layout_alignLeft="@+id/et_estado_ca"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_cidade_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_estado_ca"
        android:layout_below="@+id/et_instituicao_ca"
        android:layout_marginTop="21dp"
        android:text="Cidade:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_estado_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/et_instituicao_ca"
        android:layout_alignTop="@+id/tv_estado_ca"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_nome_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_datan_ca"
        android:layout_below="@+id/tv_cabacalho_ca"
        android:layout_marginTop="30dp"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_salvar_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Salvar" />

    <TextView
        android:id="@+id/tv_cabacalho_ca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Cadastro do Aluno"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>